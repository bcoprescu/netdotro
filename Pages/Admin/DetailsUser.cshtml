@page
@model netdotro.Admin.Details.DetailsUserModel
@{
}

<h3></h3>
<div class="row">
    <div class="col-md-4">
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-header">User Details</div>
                <div class="card-body">
                    <h4 class="card-title">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h4>
                <p class="card-text">
                    Email: @Model.CurrentUser.Email
                </p>
                <p class="card-text">
                    Phone: @Model.CurrentUser.PhoneNumber
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
    <center>
        <div class="form-group center">
            @if (@Model.CurrentUser.ProfilePicture != null)
            {
                <img id="profilePicture" style="width:350px;height:350px; object-fit:cover"
                    src="data:image/*;base64,@(Convert.ToBase64String(@Model.CurrentUser.ProfilePicture))">
            }
            else
            {
                <img id="profilePicture" style="width:350px;height:350px; object-fit:cover"
                    src="~/images/default-user-3.png">
            }
        </div>
    </center>
</div>
</div>